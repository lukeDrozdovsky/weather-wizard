<%- include("partials/header.ejs") %>
<div class="grid-container">
    <div class="container">
        <div class="sub-container">
            <form action="/forecast" method="post">
                <label for="city-input">Wpisz nazwę miasta:</label><br>
                <input type="text" id="city-input" name="city" placeholder="Nazwa miasta" autocomplete="off" oninput="onCityInput(event)">
                <!-- Miejsce na dynamiczne sugestie -->
                <ul id="suggestions"></ul>
                <!-- Pola ukryte do przechowywania współrzędnych -->
                <input type="hidden" id="latitude" name="latitude">
                <input type="hidden" id="longitude" name="longitude">
                <br>
                <button type="submit">Forecast Now</button>
              </form>
        </div>
    </div>
</div>
<%- include("partials/footer.ejs") %>